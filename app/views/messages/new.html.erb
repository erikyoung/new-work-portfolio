<div class="booyah-box col-8 offset-2">
<h1>Let's Keep in Contact</h1>
<%= simple_form_for @message, url: create_message_url do |f| %>
  
  <%= @message.errors.full_messages.join(', ') %>

  <%= f.input :name, placeholder: 'John Doe' %>
  <%= f.input :email, placeholder: 'email' %>
  <%= f.input :body, as: :text, placeholder: 'Hey there, I wanted to contact you about..' %>
  <%= f.submit 'Contact Me', class: 'btn btn-primary' %>
<% end %>
</div><!--top-banner--> 







		
			
			
				
			
		