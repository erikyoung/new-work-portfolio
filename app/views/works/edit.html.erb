
		<div class="booyah-box col-8 offset-2">
			<h1>Let's Keep in Contact</h1>
			<%= simple_form_for @work do |f| %>
				<%= f.input :name %> 
				<%= f.input :address %> 
				<%= f.input :email, placeholder: 'user@domain.com' %>
				<%= f.input :message, placeholder: "I'm contacting you about..." %> 
				<br />
				<%= f.submit 'Contact Me', class: 'btn btn-primary' %>
			<% end %>
		</div><!--top-banner--> 
	