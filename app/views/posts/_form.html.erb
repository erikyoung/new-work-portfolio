<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <label class="form-control-label string required" for="post_title">Body<abbr title="required">*</abbr></label>
    <%= f.trix_editor :body %>
    <div class="post-image text-center w-100 mt-4"><%= image_tag @post.image, class: "" %></div>
    <%= f.file_field :image, class: "mt-4" %>
    <%= f.check_box :remove_image %> Remove
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary mt-5" %>
  </div>
<% end %>
